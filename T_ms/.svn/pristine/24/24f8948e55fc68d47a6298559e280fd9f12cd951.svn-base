<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<script type="text/javascript" src="${pageContext.request.contextPath}/easyui/js/jquery-1.9.1.min.js"></script>
<script type="text/javascript">
	function search(){
		$('#listFrom').submit();
	}
</script>
<style type="text/css">
body {
	margin: 0px;
}

#topMenu {
	height: 35px;
	border: 1px solid black;
	line-height: 28px;
	background-color: #EEEEEE;
	height: 28px;
}

#topMenu #leftMenu {
	height: 35px;
	line-height: 0;
	border: 1px solid black;
	float: left;
}

#topMenu #rightMenu {
	height: 29px;
	line-height: 0;
	float: right;
}

#logoSearch {
	height: 40px;
	border: 1px solid black;
	padding-bottom: 13px;
	padding-top: 10px;
}

#logoSearch #logo {
	width: 400px;
	height: 40px;
	border: 1px solid black;
	float: left;
}

#logoSearch #search {
	margin: 0 auto;
	width: 500px;
	height: 40px;
	border: 1px solid black;
	float: left;
}

#menu {
	height: 30px;
	border: 1px solid #c80000;
	line-height: 0;
	background-color: #c80000;
	padding-left: 16%;
}

#menu p a {
	color: #FCFAFA;
}

.search {
	width: 100%;
	overflow: hidden;
}

.search .input {
	float: left;
	border: 2px solid #B61D1D;
	margin-top: 6px;
	margin-left: 50px;
}

.search .input div {
	display: inline-block;
	padding: 0px 30px;
	line-height: 25px;
	background: #B61D1D;
	color: #fff;
	font-size: 15px;
	cursor: pointer;
}

.search .input input {
	line-height: 20px;
	outline: none;
	padding-left: 15px;
	border: hidden;
	width: 300px;
}

.Login:hover {
	color: red;
}
</style>
</head>
<div id="topMenu">
	<div id="rightMenu">
		<p>
			<c:choose>
				<c:when test="${user.id != null }">
				欢迎，${user.username}!&nbsp;
					[<a class="Login" href="${pageContext.request.contextPath}/user/logout.do">退出</a>]&nbsp;
					<a href="${pageContext.request.contextPath}/cart/cartShow.do?userid=${user.id}">购物车</a>&nbsp;
					<a href="${pageContext.request.contextPath}/order/listByUserid.do?userid=${user.id}">我的订单</a>&nbsp;
					<a href="${pageContext.request.contextPath}/user/findByUserid.do?userid=${user.id}">账户信息</a>&nbsp;
					<a href="${pageContext.request.contextPath}/address/listByUserid.do?userid=${user.id}">收货地址</a>&nbsp;&nbsp;
						
			</c:when>
				<c:otherwise>
					[<a class="Login"
						href="${pageContext.request.contextPath}/jsp/ots/login.jsp">登录</a>]&nbsp;
				[<a class="Login"
						href="${pageContext.request.contextPath}/jsp/ots/register.jsp">注册</a>]&nbsp;			
			</c:otherwise>
			</c:choose>

		</p>
	</div>
</div>


<div id="logoSearch" class="search">
	<div id="logo"><img alt="logo" src="${pageContext.request.contextPath}/images/logo_9.jpg" width="308px" height="40px"></div>
	<div class="input">
		<form id = "listFrom" action="${pageContext.request.contextPath}/greens/listBySearchQT.do" method="post">
	
			<input type="text" id="searchName" name="searchName"
			value="${searchName}" placeholder="请输入你需要的菜品" />
			<div onclick="search()">搜索</div>
		</form>
	</div>
</div>




<div id="menu">
	<p>
		&nbsp; <a href="${pageContext.request.contextPath}/greens/listBySearchQT.do">首页</a>&nbsp; 
		<a href="${pageContext.request.contextPath}/reserveTable/listBySearch.do?userId=${user.id}">餐厅预定</a>&nbsp;
		 <a href="${pageContext.request.contextPath}/jsp/ots/JF.jsp">积分活动</a>&nbsp;
		<a href="${pageContext.request.contextPath}/shop/shopShow.do">店铺信息</a>&nbsp; 
		<a href="#">联系我们</a>
	</p>
</div>
</html>