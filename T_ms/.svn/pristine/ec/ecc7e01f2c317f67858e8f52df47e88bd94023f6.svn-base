<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<style type="text/css">
	#topMenu{
		height: 35px;
		border: 1px solid black;
	}
	#topMenu #leftMenu{
		height: 35px;
		line-height:0; 
		border: 1px solid black;
		float:left;
	}
	#topMenu #rightMenu{
		height: 35px;
		line-height:0; 
		float:right;
	}
	#logoSearch{
		height: 40px;
		border: 1px solid black;
	}
	#logoSearch #logo{
		width:400px;
		height: 40px;
		border: 1px solid black;
		float:left;
	}
	#logoSearch #search{
		margin:0 auto;
		width:500px;
		height: 40px;
		border: 1px solid black;
		float:left;
	}
	#menu{
		height: 30px;
		border: 1px solid black;
		line-height:0; 
	}
</style>
</head>
<div id="topMenu">
	<div id ="leftMenu"><p>qq</p></div>
	<div id ="rightMenu">
		<p>
		session：${user.username}
		<c:choose>
			<c:when test="${user.id != null }">
				<a href="${pageContext.request.contextPath}/user/logout.do" >[退出]</a>&nbsp;
			</c:when>
			<c:otherwise>
				<a href="${pageContext.request.contextPath}/jsp/ots/login.jsp" >[登录]</a>&nbsp;
				<a href="${pageContext.request.contextPath}/jsp/ots/register.jsp" >[注册]</a>&nbsp;			
			</c:otherwise>
		</c:choose>
		<a href="${pageContext.request.contextPath}/greens/listBySearchQT.do" >首页</a>&nbsp;
		<a href="${pageContext.request.contextPath}/cart/findByUserid.do?userid=2" >购物车</a>&nbsp;
		<a href="${pageContext.request.contextPath}/order/listByUserid.do?userid=2" >我的订单</a>&nbsp;
		<a href="${pageContext.request.contextPath}/user/findByUserid.do?userid=2" >账户信息</a>&nbsp;
		<a href="${pageContext.request.contextPath}/address/listByUserid.do?userid=2" >收货地址</a>
		</p>
   </div>
</div>
<div id="logoSearch">
	<div id = "logo">logo</div>
	<div id="search">
		<form id = "listFrom" action="${pageContext.request.contextPath}/greens/listBySearchQT.do" method="post">
			<input type="text" id="searchName" name="searchName" value="${searchName}">
			<select id = "searchType" name ="searchType">
			<c:choose>
				<c:when test="${searchType == 'shop' }">
					<option value="food">食物</option>
					<option value="shop" selected = "true">店铺</option>
				</c:when>
				<c:when test="${searchType == 'food' }">
					<option value="food" selected = "true">食物</option>
					<option value="shop">店铺</option>
				</c:when>
				<c:otherwise>
					<option value="food">食物</option>
					<option value="shop">店铺</option>
				</c:otherwise>
			</c:choose>
	
			</select>
			<input type="submit" value="搜索">
		</form>
	</div>
</div>
<div id="menu">
	<p>&nbsp;
		<a href="#">首页</a>&nbsp;
		<a href="#">餐厅预定</a>&nbsp;
		<a href="#">积分活动</a>&nbsp;
		<a href="#">会员活动</a>&nbsp;
		<a href="#">联系我们</a>
	</p>
</div>
</html>