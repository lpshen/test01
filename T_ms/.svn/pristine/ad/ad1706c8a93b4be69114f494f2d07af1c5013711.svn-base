	<link href="${pageContext.request.contextPath}/jsp/ots/css/style.css" rel="stylesheet" type="text/css" />
	<style type="text/css">
	#med #foodShow{
		width:200px;
		height:200px;
		float:left;
		}
	#med #page{
		width:100%;
		height:50px;
		float:inherit;
		border-collapse: 1px;
	}
	#med #shopShow{
